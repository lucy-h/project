<div class="page-header">
  <h1>All items</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Item</th>
      <th>Url</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.url %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'View/Edit', edit_item_path(item), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, :class => 'btn btn-primary' %>
